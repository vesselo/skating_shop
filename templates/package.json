{
  "name": "skating-shop",
  "version": "1.0.0",
  "description": "Интернет-магазин для фигурного катания",
  "main": "app.py",
  "scripts": {
    "start": "python app.py",
    "dev": "nodemon --exec python app.py",
    "build-css": "node-sass --include-path scss templates/main.scss templates/main.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "dependencies": {
    "nodemon": "^2.0.20"
  },
  "devDependencies": {
    "node-sass": "^8.0.0"
  }
}